<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idCampo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="31dp"
        android:fontFamily="sans-serif-black"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="200sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <Button
        android:id="@+id/btnInc"
        android:layout_width="143dp"
        android:layout_height="54dp"
        android:layout_marginTop="76dp"
        android:text="@string/etiBtnInc"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCampo"
        android:onClick="incrementarContador"  />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="143dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        android:backgroundTintMode="add"
        android:text="@string/etiBtnReset"
        app:iconTint="#AC2424"
        app:iconTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInc"
        android:onClick="resetearContador" />

    <Button
        android:id="@+id/btnDec"
        android:layout_width="158dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/purple_200"
        android:backgroundTintMode="add"
        android:onClick="decrementarContador"
        android:text="@string/etiBtcDec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReset" />
</androidx.constraintlayout.widget.ConstraintLayout>